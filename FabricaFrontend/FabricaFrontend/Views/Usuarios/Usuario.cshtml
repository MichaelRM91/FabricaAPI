@model Usuario
@{
    ViewData["Title"] = "Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header">
       @ViewBag.Accion
    </div>
    <div class="card-body">
        <form asp-action="GuardarCambios" asp-controller="Usuarios" method="post">
            <input asp-for="usuId" type="hidden" />
            <div class="mb-2">
                <label class="form-label">Usuario </label>
                <input type="text" class="form-control form-control-sm" asp-for="usuNombre" />
            </div>
            <div class="mb-2">
                <label class="form-label">Password</label>
                <input type="text" class="form-control form-control-sm" asp-for="usuPass" />
            </div>
            

            <button type="submit" class="btn btn-success btn-sm">Guardar Cambios</button>


            <a asp-action="Index" asp-controller="Usuarios" class="btn btn-warning btn-sm">Volver</a>



            
        </form>

       

        

    </div>
</div>